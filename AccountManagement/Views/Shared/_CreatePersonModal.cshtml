@model PersonsModel

<div class="modal fade" id="CreatePersonModal" tabindex="-1" aria-labelledby="CreatePersonModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CreatePersonModalLabel">Create Person</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("create", "Persons", FormMethod.Post))
    {
        <div class="form-group">
                        <label>Name:</label>
                        @Html.TextBoxFor(p => p.name, new { @class = "form-control" })
                    </div>

        <br>

            <div class="form-group">
                        <label>Surname:</label>
                        @Html.TextBoxFor(p => p.surname, new { @class = "form-control" })
                    </div>

        <br>

        <div class="form-group">
                        <label>ID Number:</label>
                        @Html.TextBoxFor(p => p.id_number, new { @class = "form-control" })
                    </div>

        <br>

        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary">
                    </div>
    }
            </div>
        </div>
    </div>
</div>
